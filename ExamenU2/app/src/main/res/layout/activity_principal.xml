<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDetalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grupo2" />

    <Button
        android:id="@+id/btnDetalles"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/botones"
        android:text="Detalles"
        app:layout_constraintBottom_toTopOf="@+id/btnGlobos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnTazas"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/botones"
        android:text="Tazas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegalos" />

    <Button
        android:id="@+id/btnRegalos"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/botones"
        android:text="Regalos"
        app:layout_constraintBottom_toTopOf="@+id/btnTazas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPeluches" />

    <Button
        android:id="@+id/btnPeluches"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:backgroundTint="@color/botones"
        android:text="Peluches"
        app:layout_constraintBottom_toTopOf="@+id/btnRegalos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGlobos" />

    <Button
        android:id="@+id/btnGlobos"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/botones"
        android:text="Globos"
        app:layout_constraintBottom_toTopOf="@+id/btnPeluches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalles" />
</androidx.constraintlayout.widget.ConstraintLayout>